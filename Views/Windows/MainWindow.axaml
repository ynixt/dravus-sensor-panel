<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DravusSensorPanel.Views.Windows"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DravusSensorPanel.Views.Windows.MainWindow"
        x:DataType="vm:MainWindow"
        Icon="/Assets/app-logo.ico"
        Title="Dravus">

    <Grid Background="Transparent"
          PointerReleased="PanelContainer_PointerReleased" PointerPressed="PanelContainer_OnPointerPressed" PointerMoved="PanelContainer_OnPointerMoved">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="CanvasPanel">
        </Canvas>
    </Grid>

</Window>
