<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:DravusSensorPanel.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:CompileBindings="True"
             x:DataType="views:DisplayPicker"
             x:Class="DravusSensorPanel.Views.TextAlignmentPicker">
    <ComboBox
        HorizontalAlignment="Stretch"
        ItemsSource="{Binding TextAlignments, RelativeSource={RelativeSource AncestorType=views:TextAlignmentPicker}}"
        SelectedItem="{Binding TextAlignmentSelected, Mode=TwoWay,RelativeSource={RelativeSource AncestorType=views:TextAlignmentPicker}}"
        VerticalAlignment="Top" />
</UserControl>
